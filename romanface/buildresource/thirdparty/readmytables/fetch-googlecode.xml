<project name="fetch-googlecode" default="resolve" xmlns:ivy="antlib:org.apache.ivy.ant">
	
    <target name="resolve" description="--> resolve dependencies with ivy">
        <ivy:resolve inline="true" 
        	organisation="org.omancode" 
			module="readmytables" 
			revision="latest.integration"/>
    </target>    
	
	<target name="install" description="--> install modules from googlecode to local">
		<ivy:install from="googlecode" to="local" overwrite="true" 
			organisation="org.omancode" 
			module="readmytables" 
			revision="latest.integration" 
			/>
	</target>

	<target name="clean-cache" description="--> clean the ivy cache">
		<ivy:cleancache />
	</target>

</project>
