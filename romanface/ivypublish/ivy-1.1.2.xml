<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0">

	<info organisation="org.omancode" module="romanface" revision="1.1.2" status="release" publication="20110630160538">
		<license name="LGPL" url="http://www.gnu.org/licenses/lgpl.html"/>
		<description homepage="http://code.google.com/p/romanface/">
		</description>
	</info>

	<configurations>
		<conf name="default" visibility="public" description="binary artifacts of this module and its dependencies"/>
		<conf name="sources" visibility="public" description="source artifacts of this module and its dependencies"/>
		<conf name="javadoc" visibility="public" description="javadoc artifacts of this module and its dependencies"/>
	</configurations>

	<publications>
		<artifact conf="default"/>
		<artifact name="romanface-sources" type="source" conf="sources" ext="jar"/>
		<artifact name="romanface-javadoc" type="javadoc" conf="javadoc" ext="jar"/>
	</publications>

	<dependencies>
		<dependency org="net.casper" name="casperdatasets" rev="2.0" revConstraint="latest.integration"/>
		<dependency org="org.omancode" name="omcutil" rev="1.2.3" revConstraint="latest.integration" conf="*->@"/>
		<dependency org="org.omancode" name="readmytables" rev="1.1" revConstraint="latest.integration" conf="*->@"/>

        <dependency org="org.rosuda" name="JRI" rev="0.5.5" revConstraint="latest.integration"/>
        <dependency org="org.rosuda" name="REngine" rev="0.6.3" revConstraint="latest.integration">
        	<exclude name="RserveEngine.*" matcher="regexp"/>
        </dependency> 

        <dependency org="dsi.unimi.it" name="fastutil" rev="6.0.0" revConstraint="latest.integration"/>
        
        <dependency org="org.beanshell" name="bsh" rev="2.0b4patched"/>
        
        <!-- exclude dependencies artifacts based on configuration -->
		<exclude type="source" ext="*" conf="default,javadoc"/>
		<exclude type="javadoc" ext="*" conf="default,sources"/>
		<exclude type="jar" ext="*" conf="sources,javadoc"/>
		
    </dependencies>
</ivy-module>
